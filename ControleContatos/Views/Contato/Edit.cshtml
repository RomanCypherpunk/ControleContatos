@model ContatoModel

<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>
</div>


<form asp-controller="Contato" asp-action="Alterar" method="post">
          <input type="hidden" asp-for="ID"> </input>
          <div class="form-grupo">
            <label for="name" >Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu Nome" />
          </div>

          <div class="form-grupo">
            <label for="email" >Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu Email" />
          </div>

           <div class="form-grupo">
            <label for="celular" >Telefone</label>
            <input type="text" asp-for="Celular" class="form-control" placeholder="Digite seu Telefone" />
          </div>

        <br />
        <br />
         
          <button type="submit" class="btn btn-success" >Alterar</button>
          <a class="btn btn-secondary " asp-controller="Contato" asp-action="Index"  role="button"> Voltar </a>
        </form>

